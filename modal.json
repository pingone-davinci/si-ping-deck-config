{
  "devMode": {
    "title": "Entering Dev Mode",
    "subtitle": "Enter password for dev access",
    "tabs": {
      "dev": {
        "inputs": [
          {
            "id": "password",
            "label": "Password",
            "type": "password"
          },
          {
            "id": "submit",
            "label": "Submit",
            "type": "button",
            "onclick": "devMode('dev_password');"
          }
        ]
      }
    }
  },
  "editButton": {
    "title": "Edit Button",
    "subtitle": "Enter details for button",
    "tabs": {
      "button": {
        "inputs": [
          {
            "id": "row",
            "label": "Row",
            "default": 2
          },
          {
            "id": "col",
            "label": "Column",
            "default": 5
          },
          {
            "id": "action",
            "label": "Action",
            "type": "dropdown",
            "dropdown": {
              "optionsList": {
                "": "",
                "DV_IMPORT": "DV_IMPORT",
                "DV_LOGIN": "DV_LOGIN",
                "GIT_CLIPBOARD": "GIT_CLIPBOARD",
                "GIT_DV_CLIPBOARD": "GIT_DV_CLIPBOARD",
                "NAVIGATE_UP": "NAVIGATE_UP",
                "PREF_CLIPBOARD": "PREF_CLIPBOARD",
                "PREFERENCES": "PREFERENCES",
                "PROFILE": "PROFILE",
                "REDIRECT": "REDIRECT",
                "TEXT_CLIPBOARD": "TEXT_CLIPBOARD",
                "URL_DOWNLOAD": "URL_DOWNLOAD",
                "UTILITY": "UTILITY"
              }
            }
          },
          {
            "id": "resource",
            "label": "Resource"
          },
          {
            "id": "title",
            "label": "Title"
          },
          {
            "id": "titlePosition",
            "label": "Title Position",
            "type": "dropdown",
            "dropdown": {
              "optionsList": {
                "": "",
                "MIDDLE": "MIDDLE",
                "BOTTOM": "BOTTOM"
              }
            }
          },
          {
            "id": "icon",
            "label": "Icon"
          },
          {
            "id": "toolTip",
            "label": "Tool Tip"
          },
          {
            "id": "save",
            "label": "Save Button Details",
            "type": "button",
            "onclick": "saveButton();"
          }
        ]
      }
    }
  },
  "preferences": {
    "title": "Preferences",
    "subtitle": "Saved to browser local storage",
    "tabs": {
      "home": {
        "title": "Home",
        "inputs": [
          {
            "id": "name",
            "label": "Full Name",
            "type": "text",
            "tooltip": "This is your full name"
          },
          {
            "id": "email",
            "label": "Email"
          }
        ]
      },
      "pingone": {
        "title": "PingOne/DaVinci",
        "inputs": [
          {
            "id": "envId",
            "label": "PingOne Environment ID",
            "type": "text",
            "tooltip": "PingOne Environment ID"
          },
          {
            "id": "username",
            "label": "PingOne Username",
            "type": "text",
            "tooltip": "PingOne Username"
          },
          {
            "id": "password",
            "label": "PingOne Password",
            "type": "password",
            "tooltip": "PingOne Password"
          },
          {
            "id": "loginButton",
            "label": "Login/Refresh Companies",
            "type": "button",
            "onclick": "dvLogin();"
          },
          {
            "id": "companyId",
            "label": "PingOne Environments (w/ DaVinci)",
            "type": "dropdown",
            "dropdown": {
              "optionsLocalStorage": "pingonedavinci_companies",
            },
            "tooltip": "PingOne Env/DaVinci Company ID"
          }
        ]
      },
      "about": {
        "default": true,
        "title": "About",
        "class": "about",
        "html": "<h2><img class='logo'/> PING DECK</h2>Version: 0.1.0 <p>Feedback: <a href='mailto:pingdeck@pingidentity.com'>pingdeck@pingidentity.com</a>",
        "inputs": []
      }
    }
  }
}